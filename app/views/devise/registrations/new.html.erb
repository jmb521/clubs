<div class="container">
  <div class="row">
    <div class="col-md-3">
    </div>
    <div class="col-md-6">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %> 
        <%= f.error_notification %>
        
        <%= f.input :email, prepend: "@", input_html: {autocomplete: 'email' } %>
        <%= f.input :password, :append => "Password" %>
        <%= f.input :password_confirmation %>

        <%= f.button :submit, value: "Submit", class: "btn-primary btn-length" %>
        <br />
        <br />

              <%= render "devise/shared/links" %>
      <% end %>
    </div>
    <div class="col-md-3">
    </div>
  </div>
</div>