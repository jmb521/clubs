 

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)), wrapper: :inline_form, html: { class: "form-inline" }, wrapper_mappings: boolean: :inline_boolean} do |f| %>
      
      
      
        <%= f.input :email, input_html: { class: "mb-2 mr-sm-2" } %>
      
        <%= f.input :password, input_html: { class: "mb-2 mr-sm-2" } %>
      
        <%= f.button :submit, class: "btn-primary mb-2" %>
     <% end %>