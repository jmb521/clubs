<div class="container">
  <div class="row">
    <div class="col-xs-4 col-md-8 col-lg-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          Family
        </div>
        <div class="panel-body">

          <%= simple_form_for [@user, @family] do |f| %>
            
              <%= f.input :user_birthday, start_year: 1950 %>
   
              <%= f.input :spouse %>
            
              <%= f.input :spouse_birthday, start_year: 1950 %>
            
              <%= f.submit %>
            
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
