<div class="container">
  <div class="row">
    <div class="col-xs-4 col-md-8 col-lg-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          Committees
        </div>
        <div class="panel-body">
          <%= form_for [:admin, @committee]  do |f| %>
          <div class="form-group col-lg-12">
          <label>Name: </label>
          <%= f.text_field :name %>
          </div>
          <div class="form-group col-lg-12">
            <%= f.submit %>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
